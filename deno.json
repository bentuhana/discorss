{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "proseWrap": "preserve",
      "singleQuote": true,
      "useTabs": false
    }
  },
  "tasks": {
    "run": "deno run -A src/index.ts",
    "watch": "deno run --watch -A src/index.ts",
    "bundle": "deno bundle src/index.ts -- dist/index.js"
  },
  "importMap": "import_map.json"
}
